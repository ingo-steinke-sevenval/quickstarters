{
  "project": "grav",
  "services": [
    {
      "id": "frontend",
      "apps": [
        {
          "id": "web",
          "domain": {
            "uri": "$URI"
          },
          "mem": 512,
          "image": "gulinux/grav-docker:apache2",
          "instances": 1,
          "volumes": [
            {
              "container_path": "/data",
              "size": "8GB"
            }
          ],
          "port_mappings": [
            {
              "container_port": 8080
            }
          ]
        }
      ]
    }
  ]
}
